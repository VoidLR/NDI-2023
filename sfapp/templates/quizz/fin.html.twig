{% extends 'base.html.twig' %}

{% block title %}Quizz : Fin{% endblock %}

{% block body %}
<main>
    <div class="flex justify-center items-center content-center  mt-16 duration-300"><h1 class="bold content-center items-center justify-center text-3xl min-w-screen">Quizz terminé !</h1></div>

    <div class="sm:mx-[12.5%] xl:mx-[25%] self-center flex p-4 mt-8 flex-col items-center duration-300">
        <p class="text-transparent bg-clip-text bg-gradient-to-r from-teal-700 to-green-600 text-6xl">{{ currentScore }} / {{ questions|length }}</p>
    </div>
    {% for question in questions %}
        <section>
            <div class="flex flex-col bg-teal-900 mt-24 sm:mx-[12.5%] xl:mx-[25%] shadow-2xl duration-300">
                <h1 class="text-2xl text-white p-10">{{ question.text }}</h1><div class="flex flex-wrap self-center">
                    {% if question.numBonneRep == 1 %}<p class="text-lg text-white p-10 self-center">{{ question.reponse1 }}</p><p class="text-md text-gray-400 p-10 self-center">{{ question.reponse2 }}</p><p class="text-md text-gray-400 p-10 self-center">{{ question.reponse3 }}</p><p class="text-md text-gray-400 p-10 self-center">{{ question.reponse4 }}</p>{% endif %}
                    {% if question.numBonneRep == 2 %}<p class="text-md text-gray-400 p-10 self-center">{{ question.reponse1 }}</p><p class="text-lg text-white p-10 self-center">{{ question.reponse2 }}</p><p class="text-md text-gray-400 p-10 self-center">{{ question.reponse3 }}</p><p class="text-md text-gray-400 p-10 self-center">{{ question.reponse4 }}</p>{% endif %}
                    {% if question.numBonneRep == 3 %}<p class="text-md text-gray-400 p-10 self-center">{{ question.reponse1 }}</p><p class="text-md text-gray-400 p-10 self-center">{{ question.reponse2 }}</p><p class="text-lg text-white p-10 self-center">{{ question.reponse3 }}</p><p class="text-md text-gray-400 p-10 self-center">{{ question.reponse4 }}</p>{% endif %}
                    {% if question.numBonneRep == 4 %}<p class="text-md text-gray-400 p-10 self-center">{{ question.reponse1 }}</p><p class="text-md text-gray-400 p-10 self-center">{{ question.reponse2 }}</p><p class="text-md text-gray-400 p-10 self-center">{{ question.reponse3 }}</p><p class="text-lg text-white p-10 self-center">{{ question.reponse4 }}</p>{% endif %}
                </div>
            </div>
        </section>

    {% endfor %}


    <div class="flex flex-col justify-center items-center content-center  mt-16 duration-300">
        <h1 class="p-8 bold content-center items-center justify-center text-3xl min-w-screen">Vous pouvez enregistrer votre score !</h1>
        <div class="flex-wrap content-center">
            {{ form_start(form) }}
            {{ form_widget(form.name, { 'attr': {'class': "mx-3 my-8 px-4 border border-2 border-s border-teal-900 rounded-2xl", 'placeholder': "pseudo"} }) }}
            {{ form_widget(form.save, { 'attr': {'class': "mx-3 text-white self-center p-8 rounded-2xl bg-gradient-to-r from-teal-900 to-green-800", 'value': "Enregistrer"} }) }}
            {{ form_end(form) }}
        </div>
    </div>

    <button class="my-32 w-full duration-300">
        <a href="/accueil" class="text-white self-center p-8 rounded-2xl bg-gradient-to-r from-teal-900 to-green-800">Retour à l'accueil</a>
    </button>
</main>

{% endblock %}