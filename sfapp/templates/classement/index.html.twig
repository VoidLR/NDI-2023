{% extends 'base.html.twig' %}

{% block title %}Hello ClassementController!{% endblock %}

{% block body %}
    <main>
            <h1 class="content-center items-center text-white">Classement du Quizz</h1>

        <section class="flex flex-col sm:mx-[12.5%] xl:mx-[25%] duration-300">
            {% if  participants|length >= 1 %}<h1 class="text-2xl text-gradient-to-r from-teal-900 to-green-800">participant[0]</h1>
            {% if  participants|length >= 2 %}<h2 class="text-xl text-white">2.participant[1]</h2>
            {% if  participants|length >= 3 %}<h3 class="text-lg text-white">3.participant[2]</h3>
            {% if  participants|length >= 4 %}<h4 class="text-md text-white">4.participant[3]</h4>
            {% if  participants|length >= 5 %}
                {% set index = 5 %}
                {%  if participants|lenth <= 96 %}
                    {% for participant in participants|slice(4,participants|lenth) }} ) %}
                        <p>{{ index }}.participant</p>
                    {% set index = index + 1 %}
                    {% endfor %}
                {% endif %}
                {% if participants > 96 %}
                    {% for participant in participants|slice(4,96) }} ) %}

                    {% set index = index + 1 %}
                    {% endfor %}
                {% endif %}
            {% endif %}

        </section>
    </main>
{% endblock %}
